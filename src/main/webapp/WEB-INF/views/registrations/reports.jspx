                        jQuery('#item'+i).find('i').removeClass('fa-ticket').addClass('fa-gift');
                    }
                    jQuery("#item"+i+" .header").html(d.name + '<div class="meta" style="font-size:0.8em;">Price: $' + d.price + '</div>');
