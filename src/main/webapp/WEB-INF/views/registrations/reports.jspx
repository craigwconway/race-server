                    }else{
                        alert("Something went wrong while fetching your reports!");
                    }
                })
            }
        });
        request.fail(function( jqXHR, textStatus ) {
            console.log("failed")
        });
    }

    function findMinDate(d){
        var min = moment();
        var curr;
        d.forEach(function(item){
            curr = moment(item.timeStart);
            if( curr.isBefore(min) ){
